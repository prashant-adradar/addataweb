@model List<AdradarAdDataWeb.Models.AdDataModel.GroupByBrandVM>

@using AdradarAdDataWeb.Models

@{
    ViewBag.Title = "List 3";
    string __Ad_AdId_DisplayName = MetadataHelper.GetDisplayName(typeof(AdradarAdDataWeb.AdDataServiceReference.Ad), "AdId");
    string __Brand_BrandId_DisplayName = MetadataHelper.GetDisplayName(typeof(AdradarAdDataWeb.AdDataServiceReference.Brand), "BrandId");
    string __Brand_BrandName_DisplayName = MetadataHelper.GetDisplayName(typeof(AdradarAdDataWeb.AdDataServiceReference.Brand), "BrandName");
    string __Ad_NumPages_DisplayName = MetadataHelper.GetDisplayName(typeof(AdradarAdDataWeb.AdDataServiceReference.Ad), "NumPages");
    string __Ad_Position_DisplayName = MetadataHelper.GetDisplayName(typeof(AdradarAdDataWeb.AdDataServiceReference.Ad), "Position");
}

<h2>List 3</h2>

<section id="addatatable">
    <header>The top five ads by page coverage amount, distinct by brand (Sort by page coverage amount (descending), then brand name alphabetically)</header>
    <table class="table table-striped table-hover">
        <tr>
            <th width="5%">@__Ad_AdId_DisplayName</th>
            <th width="5%">@__Brand_BrandId_DisplayName</th>
            <th width="35%">@__Brand_BrandName_DisplayName</th>
            <th width="10%">@__Ad_NumPages_DisplayName</th>
            <th width="10%">@__Ad_Position_DisplayName</th>
        </tr>
        @foreach (AdDataModel.GroupByBrandVM group in Model)
        {
            foreach (var ad in group.Subgroup)
            {
                <tr>
                    <td>@ad.AdId</td>
                    <td>@ad.Brand.BrandId</td>
                    <td>@ad.Brand.BrandName</td>
                    <td>@ad.NumPages</td>
                    <td>@ad.Position</td>
                </tr>
            }
            <tr>
                <td colspan="5"></td>
            </tr>
        }
    </table>
</section>

@section scripts{
    <script type="text/javascript">
        var __Ad_AdId_DisplayName = "@__Ad_AdId_DisplayName";
        var __Brand_BrandId_DisplayName = "@__Brand_BrandId_DisplayName";
        var __Brand_BrandName_DisplayName = "@__Brand_BrandName_DisplayName";
        var __Ad_NumPages_DisplayName = "@__Ad_NumPages_DisplayName";
        var __Ad_Position_DisplayName = "@__Ad_Position_DisplayName";
    </script>
    @System.Web.Optimization.Scripts.Render("~/bundles/adradaraddata")
}
